<div class="row">
  <div class="span6 offset2">
    <div class="boxes">
      <legend><%= @title %></legend>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Project Champion</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= link_to project.title, project %></td>
              <td><%= mail_to project.profiles.first.user.email, 
                              project.profiles.first.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @projects %>
    </div>
  </div>
</div>
